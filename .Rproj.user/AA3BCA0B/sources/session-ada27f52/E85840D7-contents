# Figure A1 - Literature of Diff. Abund Genera

## A1A - non-rare taxa

```{r}

excel_map <- readxl::read_xlsx("../input_data/supplementary_input_datata/diff_abund_genera_matrix_for_plots.xlsx") %>% 
  column_to_rownames("Genus") %>% 
  as.matrix()
excel_map[is.na(excel_map)] <- 0

excel_map <- excel_map[rowSums(excel_map) != 0,]

if(!any(grepl("CHRISMB", colnames(excel_map)))){
  excel_map <- t(excel_map)  
}

```

```{r}

library(ComplexHeatmap)
excel_map_no_rare_genera <- excel_map[rowSums(abs(excel_map)) >= 3,]

excel_map_no_rare_genera_chr <- matrix(as.character(excel_map_no_rare_genera), 
                                       byrow = F, 
                                       ncol = ncol(excel_map_no_rare_genera), 
                                       nrow = nrow(excel_map_no_rare_genera))

rownames(excel_map_no_rare_genera_chr) <- rownames(excel_map_no_rare_genera)
colnames(excel_map_no_rare_genera_chr) <- colnames(excel_map_no_rare_genera)

excel_map_no_rare_genera_chr[excel_map_no_rare_genera_chr == "-1"] <- "decreased"
excel_map_no_rare_genera_chr[excel_map_no_rare_genera_chr == "1"] <- "increased"
excel_map_no_rare_genera_chr[excel_map_no_rare_genera_chr == "0"] <- "NA/NS"


heatmap_common_genera <- Heatmap(excel_map_no_rare_genera_chr, col = c("blue", "red", "lightyellow2"), name = "DA direction", border = T, 
        cluster_columns = hclust(dist(t(excel_map_no_rare_genera))), 
        cluster_rows = hclust(dist(excel_map_no_rare_genera)), 
        rect_gp = gpar(col = "darkgray", lwd = 1),
        show_row_dend = FALSE,
        show_column_dend = FALSE, 
        column_names_rot = -45) 

svg("../results/Figures/latest_figure_panels/supplementary figures/S1A-heatmap.nonRare.svg", height = 6, width = 7)
draw(heatmap_common_genera, show_heatmap_legend = FALSE)
dev.off()

```

