library(flextable)

tbl <- df %>% 
  select(any_of(c("smoking_habits_rm", "used_antibiotics_last_3_months", "sys_bp", "dia_bp", "BMI", "how_many_teeth", "gums_health_opinion", "included"))) %>% 
  set_names(c("Smoking Habit", "Antibiotics Usage", "Systolic BP", "Diastolic BP", "BMI", "NÂ° Teeth", "Gum Health (self-assessed)", "included")) %>% 
